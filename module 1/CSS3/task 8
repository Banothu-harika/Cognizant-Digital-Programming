/* Style for eventCard: add margin, padding, border */
.eventCard {
  margin: 20px;           /* Outer spacing */
  padding: 15px;          /* Inner spacing */
  border: 2px solid #3498db; /* Blue border */
  border-radius: 8px;     /* Rounded corners */
  background-color: #f8f9fa;
}

/* Outline to highlight selected form fields */
input:focus, select:focus, textarea:focus {
  outline: 3px solid #e67e22; /* Orange outline */
  outline-offset: 2px;
}

/* Example usage to show visibility differences */

/* Hidden element (still takes space, but invisible) */
.hidden-element {
  visibility: hidden;
  background-color: #e74c3c;
  color: white;
  padding: 10px;
  margin: 10px 0;
}

/* None element (removed from layout, no space taken) */
.none-element {
  display: none;
  background-color: #2ecc71;
  color: white;
  padding: 10px;
  margin: 10px 0;
}
