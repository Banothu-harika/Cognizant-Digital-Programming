        $('.event-card').fadeIn(800); // Show with fade effect
        alert("Youâ€™ve registered!");
        
        // Optional: fade out the card after 5 seconds
        setTimeout(() => {
          $('.event-card').fadeOut(800);
        }, 5000);
      });
    });
